doctype html
html
  head
    title The Galaxy
    script(src='/chat.js')
    script(src='/socket.io/socket.io.js')
    link(href='/css/style.css', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css?family=Oswald|Roboto+Condensed:300|Ubuntu+Condensed', rel='stylesheet')
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', rel='stylesheet')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    style.
      input
      {
      font-family: 'Ubuntu Condensed';
      }
      button:focus
      {
      outline: none;
      }
      .jumbotron {
      background-color: rgba(204, 204, 204, 0);
      }
      body
      {
      background-color: black;
      background: url("images/galaxy.jpg") no-repeat center fixed;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
      }
      .heading {
        font-family: monospace;
        color: white;
      }
      #textlayer {
        z-index: 30;
        margin: 0px;
        height: 100%;
        width: 100%;
        top: 0px;
        left: 0px;
        position: absolute;
      }
      #animationlayer {
        z-index: 400;
        margin: 0px;
        top: 0px;
        left: 0px;
        width: 100%;
        height: 100%;
        position: absolute;
      }
      #content {
        width: 99.3%;
        margin: 5px;
        height: 500px;
        border: solid 5px #999;
        overflow-y: scroll;
        background-color: white;
        position: relative;
      }
  body
    audio#sendsound(src='send.mp3', type='audio/mpeg')
    audio#receive(src='receive.mp3', type='audio/mpeg')
    #hostname
    img(src='images/thegalaxy.png')
    #content
      #animationlayer
      #textlayer
    .controls
    input#name(style='width:25%; font-size: 15px; margin-left: 5px; display: inline-block;', placeholder='Name')
    input#field(style='width:70%; font-size: 15px; margin-left: 5px; display: inline-block;', placeholder='Message')
    input#send(style='display: inline-block; margin-top: 0; border: none; margin-left: 5px; font-size: 15px; padding: 0px 12px 0px 12px; height: 25px; border-radius: 0;', type='submit', value='Send')
