doctype html
html
 head
  title The Galaxy
  link(rel='icon', href='logo.png')
  script(src='/chat.js')
  script(src='/socket.io/socket.io.js')
  link(href='https://fonts.googleapis.com/css?family=Oswald|Roboto+Condensed:300|Ubuntu+Condensed', rel='stylesheet')
  link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', rel='stylesheet')
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js')
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
  style.
   input
   {
   font-family: 'Ubuntu Condensed';
   font-size: 15px;
   margin-left: 5px;
   display: inline-block;
   }
   input:focus
   {
   outline: none;
   }
   #send
   {
   background-color: #CCC;
   }
   #send:hover, #send:focus
   {
   background-color: #999;
   }
   .jumbotron {
   background-color: rgba(204, 204, 204, 0);
   }
   body
   {
   background-color: black;
   background: url("images/galaxy.jpg") no-repeat center fixed;
   -webkit-background-size: cover;
   -moz-background-size: cover;
   -o-background-size: cover;
   background-size: cover;
   }
   .heading {
   font-family: Monospace;
   color: white;
   }
   #textlayer {
   z-index: 30;
   margin: 0px;
   height: 100%;
   width: 100%;
   top: 0px;
   left: 0px;
   position: absolute;
   }
   #animationlayer {
   z-index: 400;
   margin: 0px;
   top: 0px;
   left: 0px;
   width: 100%;
   height: 100%;
   position: absolute;
   }
   #content {
   display: inline-block;
   width: 80.925%;
   margin: 5px;
   height: 500px;
   border: solid 5px #400080;
   overflow-y: scroll;
   background-color: white;
   position: relative;
   }
   #users {
   display: inline-block;
   width: 18%;
   margin-top: 5px;
   margin-left: 0px;
   margin-bottom: 5px;
   margin-right: 5px;
   height: 500px;
   border: solid 5px #400080;
   overflow-y: scroll;
   background-color: white;
   position: relative;
   }
   .name {
   display: inline-block;
   font-family: 'Ubuntu Condensed';
   margin-top: 2px;
   margin-bottom: 0;
   }
   .message {
   display: inline-block;
   font-family: 'Roboto Condensed';
   margin-top: 2px;
   margin-bottom: 0;
   }
 body
  audio#sendsound(src='send.mp3', type='audio/mpeg')
  audio#receive(src='receive.mp3', type='audio/mpeg')
  #hostname
  img(src='images/thegalaxy.png')
  #content
   #animationlayer
   #textlayer
  #users
  .controls
  input#name(style='width:25%;', placeholder='Name')
  input#field(style='width:70%;', placeholder='Message')
  input#send(style='margin-top: 0; border: none; padding: 0px 12px 0px 12px; height: 25px; border-radius: 0;', type='submit', value='Send')
